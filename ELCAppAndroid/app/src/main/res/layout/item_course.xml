<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_weight=".3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BUAD 302"
                android:id="@+id/textViewCourseName"
                android:textSize="@dimen/text_large_size"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Professor James Owens"
                android:id="@+id/textViewInstructorName"
                android:textSize="@dimen/text_medium_size"
                android:layout_marginTop="4dp"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MW 12-2"
                android:id="@+id/textViewDate"
                android:textSize="@dimen/text_medium_size"
                android:layout_marginTop="4dp"
                android:textColor="@color/white" />
        </LinearLayout>

  <CheckBox
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:id="@+id/selectClassCheckBox"
      android:layout_weight=".5"
      android:layout_gravity="right"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/attendanceButton"
            android:text="Attendance"
            android:background="@color/teal"
            android:textColor="@color/white"
            android:layout_gravity="right"/>

    </LinearLayout>

</LinearLayout>